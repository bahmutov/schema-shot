{
  "name": "schema-shot",
  "description": "Framework-agnostic snapshot testing using 'schema by example' for highly dynamic data",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/schema-shot/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "npm run ava",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/schema-shot#readme",
  "keywords": [
    "json-schema",
    "jsonschema",
    "schema",
    "snapshot",
    "test",
    "testing"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/schema-shot.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "dependency-check .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js test/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js test/*-spec.js",
    "ava": "ava --verbose test/*.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "dependencies": {
    "callsites": "2.0.0",
    "check-more-types": "2.24.0",
    "debug": "4.1.1",
    "find-test-caller": "1.0.2",
    "lazy-ass": "1.6.0",
    "mkdirp": "0.5.1",
    "ramda": "0.23.0",
    "snap-shot-core": "1.2.2",
    "stack-sites": "1.4.1",
    "strip-ansi": "3.0.1",
    "validate-by-example": "1.5.0",
    "variable-diff": "1.1.0"
  },
  "peerDependencies": {
    "babel-core": "^6.0.0"
  },
  "devDependencies": {
    "ava": "0.19.1",
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.8.0",
    "deps-ok": "1.2.0",
    "fake-todos": "1.8.0",
    "faker": "4.1.0",
    "git-issues": "1.3.1",
    "license-checker": "9.0.3",
    "mocha": "3.2.0",
    "nsp": "2.6.3",
    "pre-git": "3.14.0",
    "semantic-release": "6.3.6",
    "snap-shot": "2.16.4",
    "standard": "10.0.1"
  },
  "ava": {
    "failWithoutAssertions": false
  }
}
